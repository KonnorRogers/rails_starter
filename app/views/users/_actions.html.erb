<% if user_signed_in? %>
  <%= render "users/logout_link" %>
  <br>
  <%= render "users/edit_link" %>
<% else %>
  <%= render "users/login_link" %>
  <br>
  <%= render "users/signup_link" %>
  <br>
  <% if controller_name != "confirmations" %>
    <%= render "users/confirmation_link" %>
  <% end %>
<% end %>
